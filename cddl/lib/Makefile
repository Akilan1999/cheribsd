# $FreeBSD$

.include <src.opts.mk>

SUBDIR=	${_drti} \
	libavl \
	libctf \
	${_libdtrace} \
	libnvpair \
	libumem \
	libuutil \
	${_libzfs_core} \
	${_libzfs} \
	${_libzpool} \
	${_tests}

.if ${MK_TESTS} != "no"
_tests=		tests
.endif

.if ${MK_ZFS} != "no"
_libzfs_core=	libzfs_core
_libzfs=	libzfs
.if ${MK_LIBTHR} != "no"
_libzpool=	libzpool
.endif
.endif

.if ${MACHINE_ARCH} == "amd64" || ${MACHINE_ARCH} == "i386" || \
	${MACHINE_CPUARCH} == "mips" || ${MACHINE_CPUARCH} == "powerpc" || \
	${MACHINE_CPUARCH} == "arm"
_drti=		drti
_libdtrace=	libdtrace
.endif

.if defined(LIBCHERI)
.if ${MK_LIBCHERI_ALL} == "no"
SUBDIR:=
.else
.if ${MK_LIBCHERI_BROKEN} == "no"
# dt_options.c stores pointers in ints (should store ints in pointers)
SUBDIR:=	${SUBDIR:Nlibdtrace}
.endif
.endif
.endif

.include <bsd.subdir.mk>
